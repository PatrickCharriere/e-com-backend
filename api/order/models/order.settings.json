{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "orderId": {
      "type": "uid"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "paid",
        "declined",
        "error",
        "refunded"
      ]
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "preparationInProgress",
        "sent",
        "received",
        "notReceived",
        "cancelled"
      ]
    },
    "products": {
      "type": "json"
    },
    "totalAmount": {
      "type": "decimal"
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "EUR",
        "AUD",
        "USD"
      ]
    },
    "customerPostalAddress": {
      "type": "text"
    },
    "customerEmailAddress": {
      "type": "email"
    },
    "completed": {
      "type": "boolean"
    },
    "notes": {
      "type": "richtext"
    },
    "datePlaced": {
      "type": "string"
    },
    "dateSent": {
      "type": "string"
    },
    "dateReceived": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "customerFullName": {
      "type": "string"
    }
  }
}
